<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/edittext_background">

    <!-- Başlık -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Marketim | Bildirim Ayarı"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- İçerik -->
    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Günün hangi saatinde sana bildirim gönderelim?"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <!-- Tamam Butonu -->
    <EditText
        android:id="@+id/edittext_saat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_background"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:hint="Saat Seçiniz."
        android:inputType="none"
        android:onClick="saatsec"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:textColor="@color/pink"
        android:textColorHint="@color/dark_gray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/button_kaydet"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="KAYDET"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_iptal"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="İPTAL"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>
